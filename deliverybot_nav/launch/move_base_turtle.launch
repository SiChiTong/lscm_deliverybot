<launch>
  <!-- Arguments -->
  <arg name="model" default="deliverybot"/>
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="odom" />
  <arg name="move_forward_only" default="true"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />

    <!-- <param name="base_global_planner" type="string" value="navfn/NavfnROS" /> -->
    <!-- <param name="base_local_planner" value="eband_local_planner/EBandPlannerROS"/> -->
    <!-- <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/> -->

    <rosparam file="$(find deliverybot_nav)/param/turtle/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find deliverybot_nav)/param/turtle/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find deliverybot_nav)/param/turtle/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find deliverybot_nav)/param/turtle/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find deliverybot_nav)/param/turtle/move_base_params.yaml" command="load" />
    <rosparam file="$(find deliverybot_nav)/param/turtle/dwa_local_planner_params.yaml" command="load" />
    <!-- <rosparam file="$(find deliverybot_nav)/param/turtle/eband_local_planner.yaml" command="load" /> -->
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
  </node>


  
  <!-- Parameters -->
  <!-- <rosparam file="$(find ghost)/param/move_base.yaml" ns="move_base" />
  <rosparam file="$(find ghost)/param/global_costmap_noslam.yaml" ns="move_base" />
  <rosparam file="$(find ghost)/param/local_costmap_noslam.yaml" ns="move_base" />
  <rosparam file="$(find ghost)/param/global_planner.yaml" ns="move_base" />
  <rosparam file="$(find ghost)/param/eband_local_planner.yaml" ns="move_base" />
  <rosparam file="$(find ghost)/param/dwa_local_planner.yaml" ns="move_base" /> -->

  <!-- Movebase -->
  <!-- <node pkg="move_base" type="move_base" name="move_base" respawn="false" output="$(arg output)"> -->
  <!-- <node pkg="move_base" type="move_base" name="move_base" respawn="false" output="screen">
  </node> -->
  

</launch>
